#!/usr/bin/env php7.0
<?php

// Use all the memory
ini_set("memory_limit", "-1");
error_reporting(1);
error_reporting(E_ALL);
define("DISCORDPHP_STARTTIME", microtime(true));
define("BASEDIR", __DIR__);

// Load the autoloader
require_once(__DIR__ . "/vendor/autoload.php");

// Load the config
require_once(__DIR__ . "/config/config.php");

// Load the dependencies
$container = require_once(__DIR__ . "/config/dependencies.php");

// Init the bot
$container["log"]->addInfo("Sovereign is starting up..");

// Launch the bot
try {
    $bot = new \Sovereign\Sovereign($container);
} catch (\Exception $e) {
    $container["log"]->addError("An error occured: " . $e->getMessage());
    die();
}

// Add all the plugins
$bot->addPlugin("onMessage", "about", "\\Sovereign\\Plugins\\about", 1, "Shows information about the bot and it's creator", "", null);
$bot->addPlugin("onMessage", "auth", "\\Sovereign\\Plugins\\auth", 1, "Authenticates you against a login with certain restrictions", "<authCode>", null);
$bot->addPlugin("onMessage", "char", "\\Sovereign\\Plugins\\char", 1, "Fetches data from EVE-KILL about a character", "<characterName>", null);
$bot->addPlugin("onMessage", "coinflip", "\\Sovereign\\Plugins\\coinflip", 1, "Flips a coin, and gives you the results", "", null);
$bot->addPlugin("onMessage", "config", "\\Sovereign\\Plugins\\config", 1, "Lets you configure parts of the bot, but only if you're admin", "", null);
$bot->addPlugin("onMessage", "corp", "\\Sovereign\\Plugins\\corp", 1, "Fetches data from EVE-KILL about a corporation", "<corporationName>", null);
$bot->addPlugin("onMessage", "eightball", "\\Sovereign\\Plugins\\eightball", 1, "Shakes the eightball, and gives you a reply", "", null);
$bot->addPlugin("onMessage", "eb", "\\Sovereign\\Plugins\\eightball", 1, "Shakes the eightball, and gives you a reply", "", null);
$bot->addPlugin("onMessage", "guilds", "\\Sovereign\\Plugins\\guilds", 1, "Tells you what guilds (Server) the bot is on", "", null);
$bot->addPlugin("onMessage", "item", "\\Sovereign\\Plugins\\item", 1, "Shows you all the information available in the database, for an item", "<itemName>", null);
$bot->addPlugin("onMessage", "join", "\\Sovereign\\Plugins\\join", 1, "Tells you the oauth invite link", "", null);
$bot->addPlugin("onMessage", "meme", "\\Sovereign\\Plugins\\meme", 1, "Dank memes!", "", null);
$bot->addPlugin("onMessage", "pc", "\\Sovereign\\Plugins\\pc", 1, "Lets you check prices of items in EVE. (Global)", "<itemName>", null);
$bot->addPlugin("onMessage", "amarr", "\\Sovereign\\Plugins\\pc", 1, "Lets you check prices of items in EVE. (Amarr)", "<itemName>", null);
$bot->addPlugin("onMessage", "jita", "\\Sovereign\\Plugins\\pc", 1, "Lets you check prices of items in EVE. (Jita)", "<itemName>", null);
$bot->addPlugin("onMessage", "dodixie", "\\Sovereign\\Plugins\\pc", 1, "Lets you check prices of items in EVE. (Dodixie)", "<itemName>", null);
$bot->addPlugin("onMessage", "hek", "\\Sovereign\\Plugins\\pc", 1, "Lets you check prices of items in EVE. (Hek)", "<itemName>", null);
$bot->addPlugin("onMessage", "rens", "\\Sovereign\\Plugins\\pc", 1, "Lets you check prices of items in EVE. (Rens)", "<itemName>", null);
$bot->addPlugin("onMessage", "porn", "\\Sovereign\\Plugins\\porn", 1, "Returns a picture/gif from one of many Imgur categories", "<category>", null);
$bot->addPlugin("onMessage", "time", "\\Sovereign\\Plugins\\time", 1, "Tells you the current EVE Time and time in various other timezones", "", null);
$bot->addPlugin("onMessage", "tq", "\\Sovereign\\Plugins\\tq", 1, "Tells you the current status of Tranquility", "", null);
$bot->addPlugin("onMessage", "user", "\\Sovereign\\Plugins\\user", 1, "Tells you discord information on a user. Including when the bot last saw them, saw them speak, and what they were last playing", "<discordName>", null);
$bot->addPlugin("onMessage", "wolf", "\\Sovereign\\Plugins\\wolf", 1, "Asks wolframAlpha a question, and returns the result", "<question>", null);
$bot->addPlugin("onMessage", "help", "\\Sovereign\\Plugins\\help", 1, "Shows helpfull information about all the plugins available", null, null);
$bot->addPlugin("onTimer", "memory", "\\Sovereign\\Plugins\\memory", 1, "", "", 1800);
$bot->addPlugin("onTimer", "jabberPingsTheCulture", "\\Sovereign\\Plugins\\jabberPingsTheCulture", 1, "", "", 1);

// Launch the bot
$bot->run();
